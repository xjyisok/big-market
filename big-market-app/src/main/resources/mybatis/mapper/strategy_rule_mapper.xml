    </resultMap>

<!--    <insert id="insert" parameterType="cn.bugstack.infrastructure.persistent.po.Award">-->
<!--        INSERT INTO table(a,b,c) VALUES(#{a}, #{b}, #{c})-->
<!--    </insert>-->

<!--    <update id="update" parameterType="cn.bugstack.infrastructure.persistent.po.Award">-->
